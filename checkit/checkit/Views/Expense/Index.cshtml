@model IEnumerable<InAndOut.Models.Expense> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>

        </div>
        <div class="col-6 text-right" >
            <a class="btn btn-success" asp-area="" asp-controller="Expense" asp-action="Create"> Create new Expense </a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
            {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Expense</th>
                        <th>Amount</th>
                        <th>Expense Type</th>
                        <th>Changes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var Expense in Model)
                {
                    <tr>
                        <td width="35%">@Expense.ExpenseName</td>
                        <td width="35">@Expense.Amount</td>
                        <td width="35">@Expense.ExpenseType.Name</td>
                        <td width="30%">
                            <div class="w-100 btn-group " role="group">
                                <a class="btn btn-primary mx-1 " asp-area="" asp-route-Id="@Expense.Id" asp-controller="Expense" asp-action="Update"> Update </a>
                                <a class="btn btn-danger mx-1" asp-area="" asp-route-Id="@Expense.Id" asp-controller="Expense" asp-action="Delete"> Delete </a>
                            </div>
                        </td>

                    </tr>
                }
                </tbody>
            </table>
            }
            else
            {
                <h1 align="center" style="color:red">No Items Created !</h1>
            }

</div>

@section Scripts{ 
@{ <Parallel name="_ValidationScriptsPartial"/> }
}