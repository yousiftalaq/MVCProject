@model IEnumerable<InAndOut.Models.ExpenseType> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">ExpensesType List</h2>

        </div>
        <div class="col-6 text-right" >
            <a class="btn btn-success" asp-area="" asp-controller="ExpenseType" asp-action="Create"> Create new Expense type </a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
            {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Expense</th>
                      
                        <th>Changes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var ExpensesType in Model)
                {
                        <tr>
                           <td width="35%">@ExpensesType.Name</td>
                    
                           <td width="30%">
                               <div class="w-100 btn-group "role="group">
           <a class="btn btn-primary mx-1 " asp-area="" asp-route-Id="@ExpensesType.Id" asp-controller="ExpenseType" asp-action="Update"> Update </a>
           <a class="btn btn-danger mx-1" asp-area="" asp-route-Id="@ExpensesType.Id" asp-controller="ExpenseType" asp-action="Delete"> Delete </a>
                               </div>
                           </td>
                            
                        </tr>
                }
                </tbody>
            </table>
            }
            else
            {
                <h1 align="center" style="color:red">No Items Created !</h1>
            }

</div>

@section Scripts{ 
@{ <Parallel name="_ValidationScriptsPartial"/> }
}